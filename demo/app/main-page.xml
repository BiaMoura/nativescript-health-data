<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="nativescript-health-data">
  <StackLayout class="p-20">
    <Label text="{{ healthData.message }}" class="t-20 text-center c-black" textWrap="true"/>
    <Button text="{{ healthData.hasRights }}" tap="showBodyMassIndex"/>
    <Button visibility="{{ healthData.hasRights ? 'visible' : 'collapsed'}}" text="View BloodPressureSystolic" tap="showBloodPressureSystolic()"/>
    <Button visibility="{{ healthData.hasRights ? 'visible' : 'collapsed'}}" text="View BloodPressureDistolic" tap="showBloodPressureDistolic()"/>
    <ui:HealthDataUI message="{{ 'This message is shown by a custom UI component:\n' + message }}" height="100" width="300" backgroundColor="gray" />
  </StackLayout>
</Page>